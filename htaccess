# Empêche l'affichage de l'arborescence des dossiers sans index
Options -Indexes

# Active le moteur de réécriture
RewriteEngine On

# Force le HTTPS (si pas déjà en HTTPS)
RewriteCond %{HTTPS} !=on
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Redirige vers www si l'utilisateur accède sans www
RewriteCond %{HTTP_HOST} ^korbvanbonobo\.com$ [NC]
RewriteRule ^ https://www.korbvanbonobo.com%{REQUEST_URI} [L,R=301]
